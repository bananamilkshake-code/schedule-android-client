<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <!-- The main content view -->
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.open.schedule.ViewTableActivity"
		tools:ignore="MergeRootFrame"
		android:orientation="vertical">
	
		<TextView
			android:id="@+id/text_table_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:text="@string/table_name"
			android:textAppearance="?android:attr/textAppearanceLarge" />
	
		<TextView
			android:id="@+id/text_table_description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:paddingLeft="10dp"
			android:text="@string/table_description"
			android:textAppearance="?android:attr/textAppearanceSmall" />
	
		<ListView
			android:id="@+id/list_tasks"
			android:paddingTop="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
		</ListView>
	
	</LinearLayout>

	<!-- The navigation drawer -->
	<ListView 
	    android:id="@+id/list_changes_task"
		android:layout_height="match_parent"
	    android:layout_width="240dp"
	    android:layout_gravity="right"
	    android:background="#111"
        android:divider="@android:color/transparent"
		android:dividerHeight="0px" />

</android.support.v4.widget.DrawerLayout>